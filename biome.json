{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": ["**/node_modules/*", "**/coverage/*", "**/.angular/*", "scripts/*.js", "**/dist/*", "**/*.json"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useNodejsImportProtocol": "off",
        "noUnusedTemplateLiteral": "off",
        "noNonNullAssertion": "off",
        "useImportType": "off",
        "noParameterAssign": "off",
        "noUselessElse": "off",
        "noInferrableTypes": "off"
      },
      "complexity": {
        "noStaticOnlyClass": "off",
        "noThisInStatic": "off",
        "useOptionalChain": "off",
        "noForEach": "off",
        "useLiteralKeys": "off"
      },
      "suspicious": {
        "noImplicitAnyLet": "error",
        "noExplicitAny": "off",
        "noGlobalIsNan": "off",
        "noDoubleEquals": "off",
        "noAssignInExpressions": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 120,
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "all"
    }
  }
}
